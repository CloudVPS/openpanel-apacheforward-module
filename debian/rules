#!/usr/bin/make -f

build: build-stamp
build-stamp:
	./configure
	make
	touch build-stamp

install: install-stamp
install-stamp: build-stamp
	dh_testdir
	dh_testroot
	dh_installdirs
	install -m 755 action debian/openpanel-mod-apacheforward/var/opencore/modules/ApacheForward.module/
	cp module.xml *.html debian/openpanel-mod-apacheforward/var/opencore/modules/ApacheForward.module/
	install -m 755 verify debian/openpanel-mod-apacheforward/var/opencore/modules/ApacheForward.module/

binary-indep: build install

binary-arch: build install
	if [ -d debian/tmp ] ; then dh_install -a --sourcedir=debian/tmp ; fi
	dh_installdocs -a
	dh_installdeb -a
	dh_compress -a
	dh_fixperms -a
	dh_shlibdeps -a
	dh_gencontrol -a
	dh_md5sums -a
	dh_builddeb -a

binary: binary-arch binary-indep

clean:
	rm -f build-stamp install-stamp
	[ ! -f makeinclude ] || make clean
	dh_clean

.PHONY: build binary binary-arch binary-indep clean install
